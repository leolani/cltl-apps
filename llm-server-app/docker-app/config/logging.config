[loggers]
keys: root,werkzeug

[handlers]
keys: console, file

[formatters]
keys: pepperFormatter

[logger_root]
level: DEBUG
handlers: console, file

[handler_console]
class: StreamHandler
level: NOTSET
formatter: pepperFormatter
args: (sys.stdout,)

[handler_file]
class: FileHandler
level: NOTSET
formatter: pepperFormatter
args: ('storage/leolani.log', 'w')

[formatter_pepperFormatter]
format: %(asctime)s %(levelname)-8s %(name)-60s %(message)s
datefmt: %x %X

[logger_amqp_connection]
level: INFO
handlers: console
qualname: amqp.connection
propagate: 0

[logger_werkzeug]
level: INFO
handlers: console
qualname: werkzeug
propagate: 0
